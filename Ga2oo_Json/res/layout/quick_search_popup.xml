<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="5dip"
  android:background="@drawable/upcoming_hdg_bg"
  android:orientation="vertical"
  android:id="@+id/llSearch">
  <LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="right|top"
  >
 	 <RelativeLayout
 	   android:layout_width="30dip"
  	   android:layout_height="30dip"
  	   android:gravity="center|center_vertical"
  	   android:visibility="gone"
  	   android:id="@+id/rlCross"
 	  >
  
	  	<Button 
		  	android:layout_width="15dip"
		  	android:layout_height="15dip"
		  	android:layout_gravity="right"
		  	android:gravity="center"
		  	android:layout_centerInParent="true"
		  	android:background="@drawable/cross"
		  	android:id="@+id/btnClose"
		  	/>
	</RelativeLayout>
 </LinearLayout>
	  <TextView
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:gravity="left|top"
	  	android:textSize="16sp"
	  	android:layout_marginTop="10dip"
	  	android:layout_marginLeft="5dip"
	  	android:layout_marginRight="5dip"
	  	android:layout_marginBottom="10dip"
	  	android:textColor="#ffffff"
	  	android:id="@+id/tvSearchByKeyword"
	  	android:text="Search By Keyword"/>
	  
	  <LinearLayout
	  		android:layout_width="fill_parent"
	  		android:layout_height="fill_parent"
	  		android:gravity="left|top"
	  		>
		   <EditText
		  		android:layout_width="200dip"
		  		android:layout_height="30dip"
		  		android:paddingLeft="25dip"
		  		android:singleLine="true"
		  		android:background="@drawable/search_editbg"
		  		android:id="@+id/etQuicksearchBykey"
		  		android:imeOptions="actionDone"
		  		/>
		  	<Button
		  		android:layout_width="50dip"
		  		android:layout_height="30dip"
		  		android:layout_marginLeft="20dip"
		  		android:textColor="#FFFFFF"
		  		android:background="@drawable/dlgblackblue"
		  		android:text="Search"
		  		android:id="@+id/btnSearchByKeyword"/>
	  </LinearLayout>
	    <TextView
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:gravity="left|top"
	  	android:textSize="16sp"
	  	android:layout_marginTop="10dip"
	  	android:layout_marginLeft="5dip"
	  	android:layout_marginRight="5dip"
	  	android:layout_marginBottom="10dip"
	  	android:textColor="#ffffff"
	  	android:text="Search By Location"/>
	  
	  <LinearLayout
	  		android:layout_width="fill_parent"
	  		android:layout_height="fill_parent"
	  		android:gravity="left|top"
	  		>
		   <EditText
		  		android:layout_width="200dip"
		  		android:layout_height="30dip"
		  		android:paddingLeft="25dip"
		  		android:layout_marginBottom="30dip"
		  		android:singleLine="true"
		  		android:background="@drawable/search_editbg"
		  		android:id="@+id/etQuicksearchByLocation"
		  		android:imeOptions="actionDone"
		  		/>
		  	<Button
		  		android:layout_width="50dip"
		  		android:layout_height="30dip"
		  		android:layout_marginLeft="20dip"
		  		android:textColor="#FFFFFF"
		  		android:background="@drawable/dlgblackblue"
		  		android:text="Search"
		  		android:id="@+id/btnSearchByLocation"/>
	  </LinearLayout>
</LinearLayout>
