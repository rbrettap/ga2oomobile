<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:orientation="vertical"
  android:paddingTop="10dp">
  		<RelativeLayout  
	     android:id="@+id/rlSearchFriend"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:background="@drawable/btnbg">
	    
	     <EditText  
	     	  android:id="@+id/etSearchFriend"
	          android:layout_width="240dp"
	          android:layout_height="wrap_content"
	          android:background="@drawable/search_editbg"
	          android:textColor="#000000"
	          android:textSize="13sp"
	          android:layout_alignParentLeft="true"
	          android:layout_centerVertical="true"
	          android:layout_marginLeft="10dp"
	          android:paddingLeft="30dp" 
	          android:gravity="left|center_vertical"
	          android:hint="@string/search" 
	          android:paddingRight="40dp"
	          android:singleLine="true" android:imeOptions="actionDone"/>
	          
		   <ImageView  android:id="@+id/ivSave" 
		       android:contentDescription="@string/desc"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:src="@drawable/editsave"
		      android:layout_marginLeft="210dp"
		      android:layout_centerVertical="true"
		     />  
	      
	      <Button   
	      	   android:id="@+id/btn_cancel"
	           android:layout_width="wrap_content"
	     	   android:layout_height="wrap_content"
	     	   android:layout_centerVertical="true"
	     	   android:layout_toRightOf="@id/etSearchFriend"
	     	   android:layout_marginRight="10dp"
	     	   android:layout_marginLeft="10dp"
	     	   android:background="@drawable/cancel_btn_click"/>
	   </RelativeLayout>
  		<ListView 
  		android:layout_width="fill_parent"
  		android:layout_marginTop="5dp"
  		android:layout_height="wrap_content"
  		android:id="@+id/lvsearchedFriend"
  		></ListView>
 </LinearLayout>