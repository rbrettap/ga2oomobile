<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:id ="@+id/layoutSettings"
  android:orientation="vertical"
  android:gravity="center">
  
  			<ScrollView
  				android:layout_width = "fill_parent"
  				android:layout_height = "wrap_content"
  				android:scrollbars = "none"
  				android:fadingEdge="none"
  				>
  			<LinearLayout
  						android:orientation="vertical"
  						android:layout_width="fill_parent"
  						android:layout_height="wrap_content"
  						android:gravity="center"
  						>
  						<TextView
							android:layout_height="30px"
							android:text="Settings"
							android:textStyle="bold"
							android:gravity="center_vertical" 
							android:layout_marginTop="10px" 
							android:textSize="16dip"
							android:textColor="@color/heading_color_dark" 
							android:layout_marginLeft="10dip" 
							android:layout_width="fill_parent"/>
  						<RelativeLayout
							android:id="@+id/rellayProfile"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_one"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="Profile" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>
						
						<RelativeLayout
							android:id="@+id/rellayMyCircle"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_two"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="My Circle" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>
						<RelativeLayout
							android:id="@+id/rellayFavorites"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_two"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="Favorites" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>

  						
						<RelativeLayout
							android:id="@+id/rellayAccount"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_three"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="Account" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>				
  						<TextView
							android:layout_width="fill_parent"
							android:layout_height="30px"
							android:text="General"
							android:textStyle="bold"
							android:gravity="center_vertical" 
							android:textSize="16dip"
							android:layout_marginTop="10px" 
							android:textColor="@color/heading_color_dark" 
							android:layout_marginLeft="10dip"/>
  						<RelativeLayout
							android:id="@+id/rellayAbout"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_one"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="About" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>
						<RelativeLayout
							android:id="@+id/rellayFaq"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_two"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="F.A.Q" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>
  						
						<RelativeLayout
							android:id="@+id/rellayContact"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/list_bg_three"
							android:gravity="center_vertical"
							android:layout_marginLeft="10dip"
							android:layout_marginRight="10dip"
							android:layout_marginBottom="20dip">
							
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_margin="10px"
									android:textColor="#000000" 
									android:text="Contact" 
									android:textStyle="bold" android:textSize="15dip"/>
									
								<LinearLayout
									android:layout_width="30px"
									android:layout_height="40px"
									android:layout_alignParentRight="true"
									android:gravity="center_vertical">
									
										<ImageView
											android:layout_width="wrap_content"
											android:layout_height="20px"
											android:src="@drawable/arrow"/>
								</LinearLayout>
						</RelativeLayout>	
  						
  					</LinearLayout>
  			</ScrollView>
  
</LinearLayout>
